<!--pages/share/share.wxml-->
 <view class='container oh bgRose'>  
  <view class="F_ jcc bgyellow">
      <image class="r4 w64 h64 m20" src="{{avatar}}" background-size="cover"></image>
  </view>
  <view class="W tc cf f16 b bgyellow">
    <view>发了一个拼图比赛</view>
    <view class='mt10'>比我快就能赢X元赏金</view>
  </view>
   <view class="W F_ jcc pt10 mb50" style="background:#FF0036 url(../../image/bgmain.png) no-repeat 0 100rpx; position:relative; height:200rpx;background-size:100% "> 
    <view class="h154 pa" style='top:40rpx;left:50%; margin-left:-150rpx'>
      <image class="w150 h150 r m2" bindtap="addImg" src="{{qrCode}}" mode="aspectFill"></image>
    </view>    
   </view> 
  <view class="f pt20 bgRose">
    <view class='bgf r5 p20 mt20'>
      <button class="f14 p0-80" type='primary' open-type='share'>转发到好友或群聊</button>
      <button class="f14 p0-80 mt10" type='default' bindtap="generateShareImg">生成朋友圈分享图</button>
      <view class='c7 f14 tc mt10' bindtap='urlTarget' data-url='beginPuzzles'>我也试一试 <icon class='iconfont icon-enter'></icon> </view>
    </view>
  </view>

  <canvas class="W h100">
    <view class="container oh bgRose">
      <view class="F_ jcc bgyellow">
          <image class="r4 w64 h64 m20" src="{{avatar}}" background-size="cover"></image>
      </view>
      <view class="W tc cf f16 b bgyellow">
        <view>发了一个拼图比赛</view>
        <view class='mt10'>比我快就能赢X元赏金</view>
      </view>
      <view class="W F_ jcc pt10 mb50" style="background:#FF0036 url(../../image/bgmain.png) no-repeat 0 100rpx; position:relative; height:200rpx;background-size:100% "> 
        <view class="h154 pa" style='top:40rpx;left:50%; margin-left:-150rpx'>
          <image class="w150 h150 r m2" bindtap="addImg" src="{{qrCode}}" mode="aspectFill"></image>
        </view>    
      </view> 

    </view>
  </canvas>
</view>
