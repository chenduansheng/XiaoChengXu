<!--pages/beginPuzzles/beginPuzzles.wxml-->
<view class="container W H f14">
  <scroll-view class="H scroll bbox" scroll-y="true">
    <view class="pr">
      <image class="W" mode='widthFix' src="{{posterSrc}}"></image>
      <view class="pa B0 W bgopacity p10 F_ bbox">
        <block wx:for="0000000000" wx:for-index="index">
          <image class="w25 h25 r" src="../../image/square.png"></image>
        </block>
      </view>
    </view>
    <view class="F_ jcc p10-0">
      <view class="r cf f16 W7 p5-0 bgorange tc" bindtap="openPuzzle">开始拼图赢赏金</view>
    </view>
    <view class="F_ h40 lh40">
      <view class="f tc" bindtap="urlTarget" data-url="index">
        <icon class="iconfont icon-homepage f20 mr5 vb corange"></icon> 
        <text class='f dib lh30'>首页</text> 
      </view>  
      <view class="f tc" bindtap='urlTarget' data-url="index">
        <icon class="iconfont icon-manage f20 mr5 vb corange"></icon> 
        <text class='f dib lh30'>发海报</text> 
      </view>
      <view class="f tc" bindtap="">
        <icon class="iconfont icon-redpacket f20 mr5 vb corange"></icon> 
        <text class='f dib lh30'>提现</text> 
      </view>
      <!-- <button class="f bbox" open-type="share" plain="true" style="border:none;color:#fff;font-size:32rpx;line-height:45px">
        <icon class="iconfont icon-share f20 mr5 vb"></icon>分享
      </button> -->
       <view class="f tc" bindtap="">
        <icon class="iconfont icon-share f20 mr5 vb corange"></icon> 
        <text class='f dib lh30'>分享</text> 
      </view> 
    </view>
    <view class="F_ bge p5-10 bbc btc bbox h50">
      <view class="h40"><image class="w40 h40" src="../../image/square.png"></image></view>
      <view class="f pl10 F">
        <view class="f f16 b ">{{ainfo.user_info.nick_name}}</view>
        <view class="f f12 F ell">
          <!-- <view class="dib"> -->
             <!-- <icon class="iconfont icon-coordinates h17 vt"></icon>  -->
          <!-- </view> -->
          距您***km
        </view>
      </view>
      <view class="pl10 f14 ">
        联系TA
      </view>
    </view>

    <view class=""></view>

    <block wx:for="00">
      <view class="">滚动</view>
    </block>    
  </scroll-view>
</view>

<!--  -->
<view class='W F bgopacity8 pa L0 T0 z2 cf f14 bbox' wx:if="{{showPuzzle}}">
    <view class="F_ jcc f12 p20-0">
      <view class="r bf dib p0-70 h30 lh15">
        <icon class="iconfont icon-time f16 vb ell"></icon>
        用时{{useTime}}秒
      </view>
    </view>

    <!-- <image class="C4 w90 h90 dib m0 bbox {{preIndex === index ? 'bgolden' : 'bc'}}" src="../../image/2018.png" data-src="{{arrPic[0]}}"></image> -->

    <view class="f F_ jcc">
      <view class="w270 h270 bbox pr">      
        <block wx:for="{{arrPic}}">
          <image class="C4 h90 dib m0 bbox {{preIndex === index ? 'bgolden' : 'bc'}}" src="{{arrPic[index]}}" data-index="{{index}}" data-src="{{arrPic[index]}}" mode="scaleToFill" bindtap="exchangePic"></image>
        </block>
      </view>  
    </view>

    <view class="F_ jcc f16 p20-0">
      <view class="r dib pl30 pr30 h40 lh40 bg2" bindtap="cancelGame">
        <icon class="iconfont icon-prompt f20 vb"></icon>
        放弃挑战
      </view>
    </view>
  </view>

